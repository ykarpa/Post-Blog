<%- include('./partials/header.ejs') %> <%- include('./partials/nav.ejs') %>
<div class="edit-post">
  <h1><%=title%></h1>
  <div>
    <%=description%>
  </div>
  <div>©<%=author%></div>

  <form method="post" action="/edit-post/<%=post.id%>?_method=PUT">
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Назва статті </label>
      <input
        required
        type="text"
        class="form-control"
        id="exampleInputPassword1"
        name="title"
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Опис</label>
      <textarea
        required
        type="text"
        class="form-control"
        id="description"
        name="description"
        rows="4"
      ></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Редагувати</button>
  </form>
</div>
<%- include('./partials/footer.ejs') %>
